generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Clinic {
  id              String   @id @default(cuid())
  name            String
  slug            String?  @unique
  ownerId         String?  // Added ownerId
  bio             String?
  coverImage      String?
  profileImage    String?
  googleReviewsUrl String?
  isPublished     Boolean  @default(false)
  
  // Main contact
  email           String?
  phone           String?
  whatsapp        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  owner     User?    @relation("ClinicOwner", fields: [ownerId], references: [id])
  members   ClinicMember[]
  invitations Invitation[]
  locations   ClinicLocation[]
}

model ClinicLocation {
  id          String   @id @default(cuid())
  clinicId    String
  name        String
  address     String
  city        String?
  state       String?
  zip         String?
  phone       String?
  email       String?
  whatsapp    String?
  googleMapsUrl String?
  openingHours Json? // e.g. { "monday": { "open": "09:00", "close": "17:00", "closed": false }, ... }
  
  clinic      Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ClinicMember {
  id        String   @id @default(cuid())
  userId    String
  clinicId  String
  roleId    String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, clinicId])
}

model Invitation {
  id        String   @id @default(cuid())
  email     String
  clinicId  String
  roleId    String
  token     String   @unique
  status    String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  inviterId String
  
  clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id])
  inviter   User     @relation("UserInvitations", fields: [inviterId], references: [id])
  
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Permission {
  id          String  @id @default(cuid())
  name        String  @unique // e.g., "patient:create", "settings:view"
  description String?
  roles       Role[]
}

model Role {
  id          String       @id @default(cuid())
  name        String       @unique // e.g., "CLINIC_MANAGER", "DOCTOR"
  members     ClinicMember[]
  permissions Permission[]
  invitations Invitation[]
}

model User {
  id                   String    @id @default(cuid())
  name                 String?
  email                String?   @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?
  accounts             Account[]
  sessions             Session[]

  // Extended Profile
  title           String?   // Ms., Mrs., Dr., etc.
  phone           String?
  dob             DateTime?
  address         String?
  
  // Doctor specific
  licenseNumber   String?
  signatureUrl    String?

  // Additions for multi-tenancy and RBAC
  defaultClinicId String?
  memberships     ClinicMember[]
  ownedClinics    Clinic[] @relation("ClinicOwner")
  invitationsSent Invitation[] @relation("UserInvitations")
  
  notificationSettings NotificationSettings?
  notifications       Notification[]

  @@index([defaultClinicId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  type      String   @default("INFO") // INFO, INVITE_RECEIVED, etc.
  link      String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model NotificationSettings {
  id          String  @id @default(cuid())
  userId      String  @unique
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  newsletter  Boolean @default(true)
  appointment Boolean @default(true)
  security    Boolean @default(true) // User Login etc.
  marketing   Boolean @default(false)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
}

enum BloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
}

model Patient {
  id                        String         @id @default(cuid())
  phone                     String
  name                      String
  gender                    Gender
  dob                       DateTime
  is_dob_estimate           Boolean        @default(false)
  city                      String?
  address                   String?
  pin_code                  String?
  marital_status            MaritalStatus?
  when_field                String? // Clarification needed
  blood_group               BloodGroup?
  spouse_blood_group        BloodGroup?
  spouse_name               String?
  referred_by               String?
  email                     String?        @unique
  how_did_you_hear_about_us String?
  care_of                   String? // "C/O"
  occupation                String?
  tag                       String?
  alternative_phone         String?
  aadhar_number             String?        @unique
  image_url                 String?
  documents                 Json? // To store a list of document URLs

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
