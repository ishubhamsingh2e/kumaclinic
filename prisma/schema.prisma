generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique
  clinicId  String
  createdAt DateTime @default(now())
  Clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
}

model Booking {
  id           String        @id @default(cuid())
  patientId    String
  clinicId     String
  start        DateTime
  end          DateTime
  title        String
  status       BookingStatus @default(PENDING)
  reason       String?
  notes        String?
  cancelReason String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  doctorId     String?
  Clinic       Clinic        @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  User         User?         @relation(fields: [doctorId], references: [id])
  Patient      Patient       @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model Clinic {
  id                   String                 @id @default(cuid())
  name                 String
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  bio                  String?
  coverImage           String?
  email                String?
  googleReviewsUrl     String?
  isPublished          Boolean                @default(false)
  ownerId              String?
  phone                String?
  profileImage         String?
  slug                 String?                @unique
  whatsapp             String?
  instagram            String?
  facebook             String?
  twitter              String?
  linkedin             String?
  showOwnerInfo        Boolean                @default(true)
  ownerFieldsToShow    Json?
  // Branch management
  isBranch             Boolean                @default(false)
  parentClinicId       String?
  parentClinic         Clinic?                @relation("ClinicBranches", fields: [parentClinicId], references: [id], onDelete: SetNull)
  branches             Clinic[]               @relation("ClinicBranches")
  // Address fields (each clinic is one location)
  address              String?
  city                 String?
  state                String?
  country              String?
  zip                  String?
  googleMapsUrl        String?
  openingHours         Json?
  ApiKey               ApiKey[]
  Booking              Booking[]
  User                 User?                  @relation(fields: [ownerId], references: [id])
  ClinicMember         ClinicMember[]
  ClinicSettings       ClinicSettings?
  DoctorAvailability   DoctorAvailability[]
  DoctorWeeklyOffDay   DoctorWeeklyOffDay[]
  DoctorSpecificOffDay DoctorSpecificOffDay[]
  Invitation           Invitation[]
}


model ClinicMember {
  id        String   @id @default(cuid())
  userId    String
  clinicId  String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  Role      Role     @relation(fields: [roleId], references: [id])
  User      User     @relation("memberships", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, clinicId])
}

model ClinicSettings {
  id                String @id @default(cuid())
  clinicId          String @unique
  slotDurationInMin Int    @default(30)
  Clinic            Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)
}

model DoctorAvailability {
  id        String @id @default(cuid())
  doctorId  String
  dayOfWeek Int
  startTime String
  endTime   String
  clinicId  String
  Clinic    Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  User      User   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, clinicId, dayOfWeek])
}

model DoctorWeeklyOffDay {
  id        String @id @default(cuid())
  doctorId  String
  clinicId  String
  dayOfWeek Int    // 0-6 (Sunday-Saturday)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Clinic    Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  User      User   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@unique([doctorId, clinicId, dayOfWeek])
  @@index([doctorId, clinicId])
}

model DoctorSpecificOffDay {
  id        String   @id @default(cuid())
  doctorId  String
  clinicId  String
  date      DateTime // Specific date (time will be set to 00:00:00)
  reason    String?  // Optional reason (e.g., "Vacation", "Holiday", "Personal")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@unique([doctorId, clinicId, date])
  @@index([doctorId, clinicId])
  @@index([date])
}

model Invitation {
  id        String   @id @default(cuid())
  email     String
  clinicId  String
  roleId    String
  token     String   @unique
  status    String   @default("PENDING")
  inviterId String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [inviterId], references: [id])
  Role      Role     @relation(fields: [roleId], references: [id])

  @@index([email])
}

model Notification {
  id          String   @id @default(cuid())
  userId      String
  title       String
  message     String
  read        Boolean  @default(false)
  type        String   @default("INFO")
  link        String?
  referenceId String?
  createdAt   DateTime @default(now())
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, referenceId])
}

model NotificationSettings {
  id          String  @id @default(cuid())
  userId      String  @unique
  newsletter  Boolean @default(true)
  appointment Boolean @default(true)
  security    Boolean @default(true)
  marketing   Boolean @default(false)
  User        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Patient {
  id                        String         @id @default(cuid())
  phone                     String
  name                      String
  gender                    Gender
  dob                       DateTime
  is_dob_estimate           Boolean        @default(false)
  city                      String?
  address                   String?
  pin_code                  String?
  marital_status            MaritalStatus?
  when_field                String?
  blood_group               BloodGroup?
  spouse_blood_group        BloodGroup?
  spouse_name               String?
  referred_by               String?
  email                     String?        @unique
  how_did_you_hear_about_us String?
  care_of                   String?
  occupation                String?
  tag                       String?
  alternative_phone         String?
  aadhar_number             String?        @unique
  image_url                 String?
  documents                 Json?
  createdAt                 DateTime       @default(now())
  updatedAt                 DateTime       @updatedAt
  Booking                   Booking[]
}

model Permission {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?
  roles       Role[]  @relation("PermissionToRole")
}

model Role {
  id          String         @id @default(cuid())
  name        String         @unique
  priority    Int            @default(0)
  members     ClinicMember[]
  invitations Invitation[]
  permissions Permission[]   @relation("PermissionToRole")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                   String                @id @default(cuid())
  name                 String?
  email                String?               @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  passwordResetExpires DateTime?
  passwordResetToken   String?               @unique
  defaultClinicId      String?
  address              String?
  dob                  DateTime?
  licenseNumber        String?
  phone                String?
  signatureUrl         String?
  title                String?
  slotDurationInMin    Int?                  @default(30)
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  Account              Account[]
  Booking              Booking[]
  Clinic               Clinic[]
  memberships          ClinicMember[]        @relation("memberships")
  DoctorAvailability   DoctorAvailability[]
  DoctorWeeklyOffDay   DoctorWeeklyOffDay[]
  DoctorSpecificOffDay DoctorSpecificOffDay[]
  Invitation           Invitation[]
  Notification         Notification[]
  NotificationSettings NotificationSettings?
  Session              Session[]

  @@index([defaultClinicId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum BloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}
